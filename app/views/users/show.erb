<img src="<%= @user.img_url %>">

<h1><%= @user.name %></h1>

<ul>
  <li>Average Event Score: <%=  %> </li>
  <li>About Me: <%= @user.bio %> </li>
  <li>City: <%= @user.city %> </li>
  <li>State/Province : <%= @user.state_province %> </li>
  <li>Country: <%= @user.country %> </li>
  <li>About Me: <%= @user.bio %> </li>
</ul>

<h2>Upcoming Events</h2>

  <ul>
    <% @user.future_events.each do |event| %>
      <li> <a href="/events/<%= "#{event.id}/#{URI.escape(event.title)}" %>"><%= event.title %></a></li>
    <% end %>
  </ul>

<h2>Past Events</h2>

  <ul>
    <% @user.past_events.each do |event| %>
      <li> <a href="/events/<%= "#{event.id}/#{URI.escape(event.title)}" %>"><%= event.title %></a></li>
    <% end %>
  </ul>


<h2>Reviews</h2>
<ul>
  <% @user.reviews.each do |review| %>
    <li><ul>
      <li><a href="/events/<%= "#{review.event.id}/#{URI.escape(review.event.title)}" %>"><%= review.event.title %></a></li>
      <li>Score: <%= review.score %></li>
      <li>Comment: <%= review.comment %> </li>
      <li>By: <a href="/users/<%= "#{review.user.id}/#{URI.escape(review.user.name)}" %>">
          <%= review.user.name %> </a> </li>
      <li>Created at: <%= review.created_at %></li>
    </ul></li>
  <% end %>
</ul>