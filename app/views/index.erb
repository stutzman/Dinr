<link rel="stylesheet" href="/stylesheets/nav.css">
<link rel="stylesheet" href="/stylesheets/grid.css">

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      </button>
      <a class="navbar-brand" href="/">Di<small><i class="glyphicon glyphicon-home"></i></small>r.</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <form class="navbar-form navbar-left" role="search" action="/" method="get">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search" name="search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Category <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>
              <form action="/" method="get" id = "filter-events">
                <button type="submit" class="btn btn-primary btn-lg btn-block" name="category" value="">All</button>
                <% Category.all.each do |category| %>
                  <% genre = category.genre %>
                  <% if @category.genre == genre %>
                    <button type="submit" class="btn btn-primary btn-lg btn-block" name="category" value="<%= genre %>" selected="selected"><%= genre + " (#{Event.future_events.where(category_id: category.id).count})"%>
                  <% else %>
                    <button type="submit" class="btn btn-primary btn-lg btn-block" name="category" value="<%= genre %>"><%= genre  + " (#{Event.future_events.where(category_id: category.id).count})"%>
                  <% end %>
                  </button>
                <% end %>
              </form>
            </li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <img class="user_img img-rounded" src=<%= User.first.img_url %> alt="...">
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= User.find(session[:user_id]).name %><b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href='/logout'>Logout</a></li>
            <li><a href='/events/new'>Create an event</a></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="row container-fluid">
  <% @events.each do |event| %>
      <div class="col-xs-12 col-sm-6 col-md-3 box">
        <div class="inner-box">
          <div class="img-box" style="background-image: url(<%= event.img_url %>)">
            <header class="event-thumb-header">
              <h3><a href="events/<%= "#{event.id}/#{URI.escape(event.title)}" %>"><%= event.title %></a></h3>
            </header>
            <% unless User.find(session[:user_id]).attending?(event.id) %>
              <form class="attend-form" action="events/attend/<%= event.id %>" method="post">
                <button name="attend" type="submit" value="true">Crash this Dinr</button>
              </form>
            <% end %>
          </div>
          <footer class="event-thumb-about row container-fluid">
            <a href="/users/<%= "#{event.user.id}/#{URI.escape(event.user.name)}" %>"  class="thumbnail col-xs-3 col-sm-3 col-md-3">
              <img src=<%= event.user.img_url %> alt="...">
            </a>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <ul class="list-unstyled">
                <li>
                  <%= event.category.genre %>
                </li>
                <li>
                  <%= event.location %>
                </li>
              </ul>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3">
              <%= event.event_date.strftime("%d %b") %>
            </div>
          </footer>
        </div>
      </div>
    </li>
  <% end %>
</div>