
<h2>Hello <%= User.find(session[:user_id]).name %></h2>

<a href='/events/new'>Want to become a Dinrsaur? Host a meal!</a>
<br>
<a href='/logout'>Logout</a>

<form action="/" method="get" id = "filter-events">
  Category:
  <select name="category" form="filter-events" onchange="this.form.submit()">
  <option value ="">all</option>
  <% Category.all.each do |category| %>
    <% genre = category.genre %>
    <% if @category.genre == genre %>
      <option value="<%= genre %>" selected="selected"><%= genre + " (#{Event.future_events.where(category_id: category.id).count})"%>
    <% else %>
      <option value="<%= genre %>"><%= genre  + " (#{Event.future_events.where(category_id: category.id).count})"%>
    <% end %>
    </option>
  <% end %>
  </select>
</form>

  <link rel="stylesheet" href="/stylesheets/grid.css">

<div class="row container-fluid">
  <% @events.each do |event| %>
      <div class="col-xs-12 col-sm-6 col-md-3 box">
        <div class="inner-box">
          <div class="img-box" style="background-image: url(<%= event.img_url %>)">
            <header class="event-thumb-header">
              <h3><a href="events/<%= "#{event.id}/#{URI.escape(event.title)}" %>"><%= event.title %></a></h3>
            </header>
            <% unless User.find(session[:user_id]).attending?(event.id) %>
              <form class="attend-form" action="events/attend/<%= event.id %>" method="post">
                <button name="attend" type="submit" value="true">Crash this Dinr</button>
              </form>
            <% end %>
          </div>
          <footer class="event-thumb-about row container-fluid">
            <a href="#" class="thumbnail col-xs-3 col-sm-3 col-md-3">
              <img src=<%= event.user.img_url %> alt="...">
            </a>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <ul class="list-unstyled">
                <li>
                  <%= event.category.genre %>
                </li>
                <li>
                  <%= event.location %>
                </li>
              </ul>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3">
              <%= event.event_date.strftime("%d %b") %>
            </div>
          </footer>
        </div>
      </div>
    </li>
  <% end %>
</div>