<link rel="stylesheet" href="/stylesheets/nav.css">
<link rel="stylesheet" href="/stylesheets/grid.css">

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      </button>
      <a class="navbar-brand" href="/">Di<small><i class="glyphicon glyphicon-home"></i></small>r.</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <form class="navbar-form navbar-left" role="search" action="/" method="get">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search" name="search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Category <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>
              <form action="/" method="get" id = "filter-events">
                <button type="submit" class="btn btn-primary btn-lg btn-block" name="category" value="">All</button>
                <% Category.all.each do |category| %>
                  <% genre = category.genre %>
                  <% if @category.genre == genre %>
                    <button type="submit" class="btn btn-primary btn-lg btn-block" name="category" value="<%= genre %>" selected="selected"><%= genre + " (#{Event.future_events.where(category_id: category.id).count})"%>
                  <% else %>
                    <button type="submit" class="btn btn-primary btn-lg btn-block" name="category" value="<%= genre %>"><%= genre  + " (#{Event.future_events.where(category_id: category.id).count})"%>
                  <% end %>
                  </button>
                <% end %>
              </form>
            </li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <img class="user_img img-rounded" src=<%= User.find(session[:user_id]).img_url %> alt="...">
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= User.find(session[:user_id]).name %><b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href='/logout'>Logout</a></li>
            <li><a href='/events/new'>Create an event</a></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="row container-fluid">
  <% @events.each do |event| %>
      <div class="col-xs-12 col-sm-6 col-md-3 box">
          <div class="inner-box">
            <a data-toggle="modal" data-target=".bs-example-modal-lg">
            <div class="img-box" style="background-image: url(<%= event.img_url %>)">
              <header class="event-thumb-header">
                <h3><%= event.title %></h3>
              </header>
              <% unless User.find(session[:user_id]).attending?(event.id) %>
                <form class="attend-form" action="events/attend/<%= event.id %>" method="post">
                  <button class="btn btn-default" name="attend" type="submit" value="true">Crash this Dinr</button>
                </form>
              <% end %>
            </div>
            </a>
            <footer class="event-thumb-about row container-fluid">
              <a href="/users/<%= "#{event.user.id}/#{URI.escape(event.user.name)}" %>"  class="thumbnail col-xs-3 col-sm-3 col-md-3">
                <img src=<%= event.user.img_url %> alt="...">
              </a>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <ul class="list-unstyled">
                  <li>
                    <%= event.category.genre %>
                  </li>
                  <li>
                    <%= event.location %>
                  </li>
                </ul>
              </div>
              <div class="col-xs-3 col-sm-3 col-md-3">
                <%= event.event_date.strftime("%d %b") %>
              </div>
            </footer>
          </div>
      </div>
    </li>
  <% end %>
</div>

<% @event=Event.find(10) %>

<div class="modal fade bs-example-modal-lg event-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-img-box" style="background-image: url(<%= @event.img_url %>)">
        <header class="event-thumb-header">
          <h3><%= @event.title %></h3>
        </header>
      </div>
      <footer class="event-thumb-about row container-fluid modal-image-footer">
        <a href="/users/<%= "#{@event.user.id}/#{URI.escape(@event.user.name)}" %>"  class="thumbnail col-xs-6 col-sm-3 col-md-2">
          <img src=<%= @event.user.img_url %> alt="...">
        </a>
        <div class="col-xs-6 col-sm-5 col-md-7">
          <%= @event.user.bio %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <% unless User.find(session[:user_id]).attending?(@event.id) %>
            <form class="modal-attend-form" action="events/attend/<%= @event.id %>" method="post">
              <button class="btn btn-default btn-lg btn-block modal-attend-button" name="attend" type="submit" value="true">Crash this Dinr</button>
            </form>
          <% end %>
        </div>
      </footer>
      <div class="row container-fluid modal-image-footer">
        <div class="col-xs-6 col-sm-4 col-md-4 modal-event-stats">
          <h3>What's cookin'?</h3>
        </div>
        <div class="col-xs-6 col-sm-8 col-md-8 modal-event-description">
          <%= @event.food_bio %>
        </div>
      </div>
    </div>
  </div>
</div>