<link rel="stylesheet" href="/stylesheets/login.css">
<link rel="stylesheet" href="/stylesheets/signup.css">

<div class="login-header">
  <img src= /images/dinr-wt.png
</div>

<div class="login-form">
  <form class="form-inline" role="form" action='/login' method='POST'>
    <div class="form-group">
      <label class="sr-only" for="exampleInputEmail2">Email address</label>
      <input type="email" name="email" class="form-control" id="exampleInputEmail2" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label class="sr-only" for="exampleInputPassword2">Password</label>
      <input type="password" name="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
    </div>
    
    <button type="submit" class="btn btn-primary btn-info" data-toggle="modal" data-target=".bs-login-modal-lg">
      <i class="glyphicon glyphicon-home"></i> Login
    </button>

    <a href="/signup" class="btn btn-primary btn-info"><span class="glyphicon glyphicon-user"></span> New User</a>
  </form>
</div>

<% if @signup %>

<div class="modal fade bs-new-user-modal-lg signup-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-vertical-centered">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="sign-up form">
          <form class="box" action='/signup' method='POST' enctype='multipart/form-data'>
            <div class="col-md-6">
              <div class="signup-form">
          <form class="form-horizontal" role="form" action='/signup' method='POST'>
            <div class="form-group">
              <label class="sr-only" for="exampleInputName2">Name</label>
              <input type="text" name="name"class="form-control" id="exampleInputName2" placeholder="Name">
            </div>
            <br>
            <div class="form-group">
              <label class="sr-only" for="exampleInputName2">Email</label>
              <input type="email" name="email"class="form-control" id="exampleInputEmail2" placeholder="Email">
            </div>
            <br>
            <div class="form-group">
              <label class="sr-only" for="exampleInputPassword2">Password</label>
              <input type="password" name="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
            </div>
            <br>
            <div class="form-group">
              <label class="sr-only" name="city" for="exampleInputCity2">City</label>
              <input type="text" name="city"class="form-control" id="exampleInputCity2" placeholder="City">
            </div>
            <br>
            <div class="form-group">
              <label class="sr-only" for="exampleInputState_Province2">State or Province</label>
              <input type="text" name="prov"class="form-control" id="exampleInputState_Province2" placeholder="State or Province">
            </div>
            <br>
            <div class="form-group">
              <label class="sr-only" for="exampleInputCountry2">Country</label>
              <input type="text" name="country"class="form-control" id="exampleInputCountry2" placeholder="Country">
            </div>
            <br>
            <div class="form-group">
              <label class="sr-only" for="exampleInputBio2">Bio</label>
              <input type="textarea" name="bio"class="form-control" id="exampleInputBio2" placeholder="Tell us about yourself...">
            </div>
              <span class="btn btn-info btn-file">
                <i class="glyphicon glyphicon-camera"></i> Choose Profile Photo <input type="file" name="img">
              </span>
            </div>
            
            <br>
            <div class="dinr-btn">
              <button type ="submit" class="btn btn-info btn-info" ><span class="glyphicon glyphicon-hand-up"></span> Dinr Up!</button>
              </form>
            </div>
              <br>
              <a href="/"> Already have an account?</a>
            </div>
            <div class="col-md-6">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(".signup-modal").modal()
</script>

<% end %>
